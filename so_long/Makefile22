SRCS = main.c image.c key.c map.c Text_editing_tools.c 
OBJS := $(SRCS:.c=.o)
NAME := so_long

GNL_DIR = ./get_next_line
GNL_NAME = get_next_line.c get_next_line_utils.c

GNL = $(addprefix $(GNL_DIR),$(GNL_NAME))
	
INCLUDE := -I./get_next_line
all : $(NAME)

clean : 
	rm -f *.o

fclean : clean
	rm -f $(NAME)

re : fclean all

#$(NAME) : $(OBJS)
	# cc *.c -I. -Lmlx -lmlx -framework OpenGL -framework Appkit -o $(NAME)
		# cc *.c -I. -Lminilibx_opengl_20191021 -lmlx -framework OpenGL -framework Appkit $(SRCS) -o $(NAME)
#arch -x86_64 gcc *.c -I. -Lmlx -lmlx -framework OpenGL -framework Appkit
$(NAME): $(OBJS) $(GNL)
	$(CC) -Imlx -Lmlx -lmlx -framework OpenGL -framework AppKit $(OBJS) -o $(NAME)


%.o : %.c $(GNL_DIR)/%.c
	cc -Wall -Wextra $(INCLUDE) -c $<

.PHONY : all clean fclean