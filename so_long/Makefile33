NAME	=	so_long
SRCS	=	main.c image.c key.c map.c Text_editing_tools.c get_next_line/get_next_line.c get_next_line/get_next_line_utils.c

OBJS = $(SRCS:%.c=%.o)
CC		=	clang
CFLAGS	=	-Wall -Werror -Wextra
CLIB	=	-L./mlx -lmlx -framework OpenGL -framework Appkit -Imlx

all		: $(NAME)

%.o	:%.c
	$(CC) $(CFLAGS)  -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -arch arm64 $(CLIB) $(SRCS) -o $(NAME)
	# install_name_tool -change libmlx.dylib mlx/libmlx.dylib $(NAME)

clean	:
	rm -rf $(OBJS)

fclean	: clean
	rm -rf	$(NAME)

re		: fclean all

.PHONY : all clean fclean re 