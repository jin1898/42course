# Compiler settings
CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -Wshadow -std=c++98 -g #-fsanitize=address

# Directories
SRCDIR = src
OBJDIR = objs

# Source Files

SRCS =  $(SRCDIR)/main.cpp \
		$(SRCDIR)/PmergeMe.cpp

		
OBJS = 	$(SRCS:$(SRCDIR)/%.cpp=$(OBJDIR)/%.o)

# Targets
NAME = PmergeMe

all: 	$(NAME)


clean:
		rm -rf $(OBJDIR)

fclean:	clean
		rm -f $(NAME)

run:	fclean all
		./$(NAME)

re:		fclean all

test: 	all
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 3 5 9 7 4
		@echo "-------------------------------------------------------------\n"
		./$(NAME) ""
		@echo "-------------------------------------------------------------\n"
		./$(NAME)
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 1 2 3 4 5
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 1 2 3 4 5a
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 3 a s a 3 a
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 2147483647
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 2147483648
		@echo "-------------------------------------------------------------\n"
		./$(NAME) -1
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 0
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)


valgrind: fclean all
		valgrind --leak-check=full --show-leak-kinds=all ./$(NAME)


$(NAME): 	$(OBJS)
			$(CXX) $(OBJS) $(CXXFLAGS) -o  $(NAME) 

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJDIR):
	mkdir -p $(OBJDIR)

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp | $(OBJDIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

.PHONY: all clean fclean re run test
